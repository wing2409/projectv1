		<script type="javascript"><![CDATA[ 
		
		/**
		 * 화면 초기화에 필요한 로직을 수행한다.
		 */
		scwin.initScreen = function() {
			var codeOption = [{group : "01", object : [sbx_Duty] }, 
							  {group : "02", object : [sbx_Postion] },
							  {group : "04", object : [sbx_Religion] },
							  {group : "13", object : [sbx_SchoolCareer] },
							  {group : "21", object : [sbx_JoinClass] },
							  {group : "22", object : [sbx_HouseKind] },
							  {group : "23", object : [sbx_JobFamily] }];
			comLib.setCodeObject(codeOption);
	
			scwin.searchPersonBasic();
			scwin.tabDrawStatus = { tab_PersonDetail : true, tab_PersonFamily : false, tab_PersonProject : false };
		};
		
		/**
		 * 사원 정보를 조회한다.
		 */
		scwin.searchPersonBasic = function() {
			var option = { id : "sbm_GetLoginPersonBasic"
						 , action : "person/getLoginPersonBasic"
						 , target : "data:json, {'id':'dma_PersonBasic', 'key':'data'}"
						 , submitDoneHandler : "searchPersonBasicCallback" };
			ajaxLib.executeSubmission(option);
		};
		
		scwin.searchPersonBasicCallback = function(resBody) {
			dma_PersonBasic.setJSON(resBody.data[0]);
			dma_PersonBasic.reform();
		};
		
		/**
		 * 업데이트(등록, 수정, 삭제)된 코드 그룹을 데이터베이스에 저장한다.
		 */
		scwin.btn_SavePersonBasic_onclick = function() {
			var familyFlag = false;
			var projectFlag = false;
			var personFlag = false;
			
			if (dma_PersonBasic.getModifiedIndex().length > 0) {
				if((valLib.validateGroup(grp_PersonBasic1, dma_PersonBasic)) && (valLib.validateGroup(grp_PersonBasic2, dma_PersonBasic))) {
					personFlag = true;
				} else {
					tac_PersonInfo.setSelectedTabIndex(0);
					return;
				}
			}
			
			var familyInfo = [{id : "RELATIONSHIP", mandatory : true}, 
							  {id : "FAMILY_NM",  mandatory : true}];
			if (dlt_PersonFamily.getModifiedIndex().length > 0) {
				if (valLib.validateGridView(grd_PersonFamily, familyInfo)) {
					familyFlag = true;
				} else {
					tac_PersonInfo.setSelectedTabIndex(1);
					return;
				}
			}
			
			var projectInfo = [{id : "PROJECT_NM", mandatory : true}, 
							   {id : "START_DATE", mandatory : true},
							   {id : "END_DATE", mandatory : true}];
			if (dlt_PersonProject.getModifiedIndex().length > 0) {
				if (valLib.validateGridView(grd_PersonProject, projectInfo)) {
					projectFlag = true;
				} else {
					tac_PersonInfo.setSelectedTabIndex(2);
					return;
				}
			}
			
			if (personFlag || familyFlag || projectFlag) {
				comLib.confirm("변경된 사원 정보를 저장하시겠습니까?", "savePersonBasicConfirmCallback");
			}
		};
		
		scwin.savePersonBasicConfirmCallback = function() {
			dma_PersonBasic.set("rowStatus", "U");
			var option = {id : "sbm_SavePersonInfo"
						, action : "person/savePersonInfo"
						, ref : "data:json,[{'id':'dma_PersonBasic','action':'modified','key':'dataPersonBasic'},{'id':'dlt_PersonProject','action':'modified','key':'dataPersonProject'},{'id':'dlt_PersonFamily','action':'modified','key':'dataPersonFamily'}]"
						, submitDoneHandler : "savePersonBasicCallback"
						, isShowMeg : true };
			ajaxLib.executeSubmission(option);	
		};
		
		scwin.savePersonBasicCallback  = function(resBody) {
			comLib.alert(resBody.result.message);
			scwin.tabDrawStatus = { tab_PersonDetail : true, tab_PersonFamily : false, tab_PersonProject : false };
			if (tac_PersonInfo.getSelectedTabID() !== "tab_PersonDetail") {
				scwin.tac_PersonInfo_onchange(tac_PersonInfo.getSelectedTabID(), tac_PersonInfo.getSelectedTabIndex(), tac_PersonInfo.getSelectedTabID());
				scwin.tabDrawStatus[tac_PersonInfo.getSelectedTabID()] = true;
			}
		};
		
		/**
		 * 업데이트된 사원 기본 정보를 업데이트 전 상태로 되돌린다.
		 */
		scwin.btn_CancelPersonBasic_onclick = function(){
			comLib.confirm("사원 정보를 변경 전 상태로 복원하시겠습니까?", "cancelPersonBasicConfirmCallback");
		};
		
		scwin.cancelPersonBasicConfirmCallback = function() {
			dma_PersonBasic.undo();
			comLib.rollbackGridView(grd_PersonFamily);
			comLib.rollbackGridView(grd_PersonProject);
		};
		
		/**
		 * 사원 이미지 파일을 업로드한다.
		 */
		scwin.btn_UploadImage_onclick = function(){
			var options = {
				title : "사진 업로드", width : 480, height : 200, 
				popupParam : { closeCallbackFncName : "uploadImageFileCallback" }
			};
			comLib.openPopup("search_person", "/ui/HM/HM002P01.xml", options);
		};
		
		scwin.uploadImageFileCallback = function(filePath) {
			dma_PersonBasic.set("IMAGE_PATH", ajaxLib.CONTEXT_PATH + "/upload/personImage/" + filePath);
		};
		
		/**
		 * 사원 정보 탭이 변경이 발생할 때 처리 로직을 수행한다.
		 */
		scwin.tac_PersonInfo_onchange = function(tabID, idx, userTabID){
			if ((userTabID === "tab_PersonFamily") && (scwin.tabDrawStatus[userTabID] === false)) {
				var option = { id : "sbm_GetPersonFamilyList"
							, action : "person/getPersonFamilyList"
							, target : "data:json, {'id':'dlt_PersonFamily', 'key':'data'}"
							, submitDoneHandler : "searchPersonFamilyCallback" };
				ajaxLib.executeSubmission(option);
			} else if ((userTabID === "tab_PersonProject") && (scwin.tabDrawStatus[userTabID] === false)) {
				var option = { id : "sbm_GetPersonProjectList"
							, action : "person/getPersonProjectList"
							, target : "data:json, {'id':'dlt_PersonProject', 'key':'data'}"
							, submitDoneHandler : "searchPersonProjectCallback" };
				ajaxLib.executeSubmission(option);
			}
		};
		
		scwin.searchPersonFamilyCallback = function() {
			scwin.tabDrawStatus.tab_PersonFamily = true;
		};
		
		scwin.searchPersonProjectCallback = function() {
			scwin.tabDrawStatus.tab_PersonProject = true;
		};
		
		/** 
		 * 가족 정보를 추가한다.
		 */
		scwin.btn_InsertFamily_onclick = function(){
			var rowIndex = dlt_PersonFamily.insertRow();
			dlt_PersonFamily.setCellData(rowIndex , "EMP_CD", dma_PersonBasic.get("EMP_CD"));
			grd_PersonFamily.setFocusedCell(rowIndex , "RELATIONSHIP");
		};
		
		/**
		 * 가족 정보를 삭제한다.
		 */
		scwin.btn_DeleteFamily_onclick = function(){
			comLib.removeGridView(grd_PersonFamily);
		};
		
		/**
		 * 프로젝트 정보를 추가한다.
		 */
		scwin.btn_InsertProject_onclick = function(){
			var rowIndex = dlt_PersonProject.insertRow();
			dlt_PersonProject.setCellData(rowIndex , "EMP_CD", dma_PersonBasic.get("EMP_CD"));
			grd_PersonProject.setFocusedCell(rowIndex , "PROJECT_NM");
		};
		
		/**
		 * 프로젝트 정보를 삭제한다.
		 */
		scwin.btn_DeleteProject_onclick = function(){
			 comLib.removeGridView(grd_PersonProject);
		};

		/**
		 * 조직 정보를 선택할 수 있는 팝업창을 오픈한다.
		 */
		scwin.btn_SearchOrgan_onclick = function(e){
			var options = {
				title : "소속 선택", width : 500, height : 425, modal : true,
				popupParam : { closeCallbackFncName : "searchOrganCallback" }
			};
			comLib.openPopup("search_organ", "/ui/HM/HM002P02.xml", options);  
		};
		
		scwin.searchOrganCallback = function(returnValue) {
			var selectedOrg = JSON.parse(returnValue);
			dma_PersonBasic.set("ORG_CD", selectedOrg.ORG_CD);
			dma_PersonBasic.set("ORG_NM", selectedOrg.ORG_NM);
		};
		
		/**
		 * 우편번호를 검색할 수 있는 팝업창을 오픈한다.
		 */
		scwin.btn_SearchZipCode_onclick = function(e){
			var options = {
				title : "우편번호 검색", width : 600, height : 461, modal : true,
				popupParam : { closeCallbackFncName : "searchZipCodeCallback" }
			};
			comLib.openPopup("search_zipcode", "/ui/HM/HM002P03.xml", options);  
		};
		
		scwin.searchZipCodeCallback = function(returnValue) {
			var selectedZipCode = JSON.parse(returnValue);
			dma_PersonBasic.set("ZIP_CD", selectedZipCode.ZIP_CD);
			dma_PersonBasic.set("ADDRESS1", selectedZipCode.ADDRESS);
			ibx_Address2.focus();
		}; 	

		]]></script>
	</head>
